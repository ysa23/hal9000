<Window x:Class="HAL9000.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Maximized"
        WindowStyle="None"
        Topmost="True"
		AllowsTransparency="True"
		Background="Transparent"
		ShowInTaskbar="False"
        Title="MainWindow" KeyDown="MainWindow_OnKeyDown">
	<Grid>
		<Image x:Name="HalImage" Visibility="Hidden" Stretch="None" Source="hal9000.png">
		</Image>
		<Ellipse x:Name="ellipse" Opacity="0.5"  Visibility="Hidden" Height="400" Width="400">
			<Ellipse.Fill>
				<RadialGradientBrush   GradientOrigin="0.5,0.5"  Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
					<GradientStop Color="Yellow" Offset="0" />
					<GradientStop Color="Red" Offset="0.07" />
					<GradientStop Color="Red" Offset="0.22" />
					<GradientStop x:Name="ss" Color="Transparent" Offset="0.8" />
				</RadialGradientBrush>
			</Ellipse.Fill>
		</Ellipse>
	</Grid>
</Window>
